
mixin Contact
	- var address = "Calle fray Juan de ibarguen # 249 diagonal al hogar Alem√°n kolbe Alto comuna Osorno Los Lagos"
	.container-fluid.py-5#contact
		.container.py-5
			.row.g-5.mb-5
				.col-lg-6.wow.fadeInUp(data-wow-delay=".3s", style="visibility: visible; animation-delay: 0.3s; animation-name: fadeInUp;")
					.h-100(style="min-height: 200pt;")
						//.border-0.rounded.w-100.h-100
						iframe.border-0.rounded.w-100.h-100( src="/extending/map.html")

				.col-lg-6.wow.fadeInUp(data-wow-delay=".5s", style="visibility: visible; animation-delay: 0.5s; animation-name: fadeInUp;")
					h5.fw-bold.fs-3.fs-lg-5.lh-sm.mb-3 Contacto
					p.mb-4= address
					.rounded.contact-form
						.mb-4
							input(type="text", class="form-control p-3", placeholder="Nombre")
						.mb-4
							input(type="email", class="form-control p-3", placeholder="Correo Electronico")
						.mb-4
							input(type="text", class="form-control p-3", placeholder="Asunto")
						.mb-4
							textarea.w-100.form-control.p-3( rows="6", cols="10", placeholder="Mensaje")
						button.btn.btn-primary.py-2.px-4(type="button") Enviar

			.row.g-4.wow.fadeInUp(data-wow-delay=".3s", style="visibility: visible; animation-delay: 0.3s; animation-name: fadeInUp;")
				each val in contact
					.col-xxl-3.col-lg-6.col-md-6.col-sm-12
						.d-flex.bg-light.p-2.rounded.contact-btn-link
							.d-flex.align-items-center.justify-content-center.bg-primary.rounded-circle.p-3.ms-3(style="width: 64px; height: 64px; min-height: 64px; min-width: 64px;")
								.btn-primary.p-2
									#{val.icon}
							.ms-3.contact-link
								h4.text-dark= val.title
								div.d-flex.justify-content-center
									each conte in val.content
										a.px-2(href=conte.url, target='_blank')
											#{conte.icon}
											h5.d-inline.fs-1= conte.title



			
